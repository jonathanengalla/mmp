{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "ts-dist",
    "noEmit": true,
    "types": ["node"],
    "paths": {
      "../../membership-service/src/handlers": ["./src/types/membership-handlers"],
      "../../payments-billing-service/src/handlers": ["./src/types/payments-handlers"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}

