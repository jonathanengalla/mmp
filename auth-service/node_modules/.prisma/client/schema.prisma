generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id                  String       @id @default(cuid())
  email               String       @unique
  firstName           String
  lastName            String
  status              MemberStatus @default(ACTIVE)
  tenantId            String       @default("t1")
  membershipType      String?
  phone               String?
  address             String?
  linkedinUrl         String?
  otherSocials        String?
  avatarUrl           String?
  roles               String[]     @default([])
  verificationToken   String?
  verificationExpires DateTime?
  tags                String[]     @default([])
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt

  invoices Invoice[]
  user     User?
}

model Event {
  id          String      @id @default(cuid())
  title       String
  description String?
  location    String?
  status      EventStatus @default(DRAFT)
  bannerUrl   String?
  capacity    Int?
  price       Int?
  currency    String?
  tags        String[]    @default([])
  startsAt    DateTime
  endsAt      DateTime
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  invoices    Invoice[]
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  member        Member        @relation(fields: [memberId], references: [id])
  memberId      String
  amount        Int
  currency      String
  status        InvoiceStatus @default(PENDING)
  issuedAt      DateTime
  dueAt         DateTime
  paidAt        DateTime?
  description   String?
  event         Event?        @relation(fields: [eventId], references: [id])
  eventId       String?
  source        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  passwordHash String
  roles        String[]     @default([])
  tenantId     String       @default("t1")
  member       Member?      @relation(fields: [memberId], references: [id])
  memberId     String?      @unique
  status       MemberStatus @default(ACTIVE)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

enum MemberStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum EventStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum InvoiceStatus {
  DRAFT
  PENDING
  PAID
  OVERDUE
  CANCELLED
}
