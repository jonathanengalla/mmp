generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  INITIATED
  PENDING
  SUCCEEDED
  FAILED
  REVERSED
  REFUNDED
}

enum PaymentChannel {
  SIMULATED
  TRAXION
  MANUAL_CASH
  MANUAL_BANK
  MANUAL_OTHER
}

enum PaymentVerificationStatus {
  NOT_REQUIRED
  PENDING_VERIFICATION
  APPROVED
  REJECTED
}

enum CreditStatus {
  AVAILABLE
  APPLIED
  VOIDED
}

enum PaymentAuditAction {
  CREATED
  SUBMITTED
  VERIFIED
  APPROVED
  REJECTED
  ALLOCATED
  REVERSED
  REFUNDED
  STATUS_CHANGED
}

enum PaymentMethodStatus {
  ACTIVE
  INACTIVE
}

enum MembershipPeriod {
  MONTHLY
  ANNUAL
}

enum EventRegistrationStatus {
  PENDING
  CONFIRMED
  CANCELLED
  CHECKED_IN
}

enum MemberStatus {
  PENDING_VERIFICATION
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum InvoiceStatus {
  DRAFT
  ISSUED
  PARTIALLY_PAID
  PAID
  OVERDUE
  VOID
  FAILED
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
  ARCHIVED
  COMPLETED
}

enum EventType {
  IN_PERSON
  ONLINE
}

enum RegistrationMode {
  RSVP
  PAY_NOW
}

model Tenant {
  id            String             @id @default(cuid())
  slug          String             @unique
  name          String
  description   String?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  users         User[]
  members       Member[]
  membershipTypes MembershipType[]
  invoices      Invoice[]
  payments      Payment[]
  paymentMethods PaymentMethod[]
  events        Event[]
  registrations EventRegistration[]
  auditLogs     AuditLog[]
  allocations   Allocation[]
  credits       Credit[]
  paymentAuditLogs PaymentAuditLog[]
  orgProfile    OrgProfile?
  featureFlags  FeatureFlags?
  roleAssignments RoleAssignment[]
}

model Member {
  id                  String        @id @default(cuid())
  tenantId            String
  email               String
  firstName           String
  lastName            String
  status              MemberStatus  @default(PENDING_VERIFICATION)
  membershipTypeId    String?
  phone               String?
  address             String?
  linkedinUrl         String?
  otherSocials        String?
  avatarUrl           String?
  roles               String[]      @default([])
  verificationToken   String?
  verificationExpires DateTime?
  tags                String[]      @default([])
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  membershipType MembershipType? @relation(fields: [membershipTypeId, tenantId], references: [id, tenantId])
  invoices       Invoice[]
  paymentMethods PaymentMethod[]
  payments       Payment[]
  credits        Credit[]
  registrations  EventRegistration[]
  user           User?
  tenant         Tenant          @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, email], map: "Member_email_tenantId_key")
  @@unique([id, tenantId], map: "Member_id_tenantId_key") // Required for composite FK
  @@index([tenantId, email], map: "Member_tenant_email_idx")
  @@index([tenantId, status], map: "Member_tenant_status_idx")
}

model MembershipType {
  id          String           @id @default(cuid())
  tenantId    String
  name        String
  description String?
  amountCents Int
  currency    String
  period      MembershipPeriod
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  tenant  Tenant   @relation(fields: [tenantId], references: [id])
  members Member[]

  @@unique([tenantId, name], map: "MembershipType_tenant_name_key")
  @@unique([id, tenantId], map: "MembershipType_id_tenant_key") // Required for composite FK
  @@index([tenantId, name], map: "MembershipType_tenant_name_idx")
}

model Event {
  id          String       @id @default(cuid())
  tenantId    String
  title       String
  slug        String
  description String?
  location    String?
  status      EventStatus  @default(PUBLISHED)
  eventType   EventType    @default(IN_PERSON)
  bannerUrl   String?
  capacity    Int?
  priceCents  Int?
  currency    String?
  tags        String[]     @default([])
  registrationMode RegistrationMode @default(RSVP)
  startsAt    DateTime
  endsAt      DateTime
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?

  invoices      Invoice[]
  registrations EventRegistration[]
  tenant        Tenant      @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, slug], map: "Event_slug_tenantId_key")
  @@unique([id, tenantId], map: "Event_id_tenantId_key") // Required for composite FK
  @@index([tenantId, status], map: "Event_tenant_status_idx")
  @@index([tenantId, deletedAt], map: "Event_tenant_deleted_idx")
}

model Invoice {
  id            String         @id @default(cuid())
  tenantId      String
  invoiceNumber String
  memberId      String
  amountCents   Int
  currency      String
  status        InvoiceStatus  @default(ISSUED)
  issuedAt      DateTime       @default(now())
  dueAt         DateTime?
  paidAt        DateTime?
  description   String?
  eventId       String?
  source        String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  member    Member   @relation(fields: [memberId, tenantId], references: [id, tenantId])
  event     Event?   @relation(fields: [eventId, tenantId], references: [id, tenantId])
  payments  Payment[]
  allocations Allocation[]
  credits   Credit[]
  auditLogs AuditLog[]
  eventRegistrations EventRegistration[]
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, invoiceNumber], map: "Invoice_invoiceNumber_tenantId_key")
  @@unique([id, tenantId], map: "Invoice_id_tenantId_key") // Required for composite FK
  @@index([tenantId, memberId], map: "Invoice_tenant_member_idx")
  @@index([tenantId, status], map: "Invoice_tenant_status_idx")
  @@index([tenantId, source, status], map: "Invoice_tenant_source_status_idx")
  @@index([tenantId, status, updatedAt], map: "Invoice_tenant_status_updated_idx")
  @@index([source, status, updatedAt], map: "Invoice_source_status_updated_idx")
}

model PaymentMethod {
  id         String               @id @default(cuid())
  tenantId   String
  memberId   String
  brand      String
  last4      String
  expMonth   Int
  expYear    Int
  label      String?
  token      String
  isDefault  Boolean              @default(false)
  status     PaymentMethodStatus  @default(ACTIVE)
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt

  member Member @relation(fields: [memberId, tenantId], references: [id, tenantId])
  tenant Tenant @relation(fields: [tenantId], references: [id])
  payments Payment[]

  @@unique([id, tenantId], map: "PaymentMethod_id_tenantId_key") // Required for composite FK
  @@index([tenantId, memberId], map: "PaymentMethod_tenant_member_idx")
  @@index([tenantId, isDefault], map: "PaymentMethod_tenant_default_idx")
}

model Payment {
  id                String                    @id @default(cuid())
  tenantId          String
  invoiceId         String?                   // Now nullable - Allocations are source of truth
  memberId          String
  paymentMethodId  String?
  amountCents       Int
  currency          String                   @default("PHP")
  channel           PaymentChannel
  status            PaymentStatus            @default(INITIATED)
  verificationStatus PaymentVerificationStatus @default(NOT_REQUIRED)
  externalReference String?                  // For Traxion transaction ID
  idempotencyKey    String?                  @unique // For webhook deduplication
  proofUrl          String?                  // Storage key, not public URL
  verifiedBy        String?                  // User ID
  verifiedAt        DateTime?
  createdBy         String?                  // User ID
  reference         String?                  // Legacy field, kept for backward compatibility
  processedAt       DateTime?
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt

  invoice           Invoice?                 @relation(fields: [invoiceId, tenantId], references: [id, tenantId])
  member            Member                   @relation(fields: [memberId, tenantId], references: [id, tenantId])
  paymentMethod     PaymentMethod?           @relation(fields: [paymentMethodId, tenantId], references: [id, tenantId])
  tenant            Tenant                   @relation(fields: [tenantId], references: [id])
  allocations       Allocation[]
  credits           Credit[]
  auditLogs         PaymentAuditLog[]

  @@unique([id, tenantId], map: "Payment_id_tenantId_key") // Required for composite FK
  @@index([tenantId, invoiceId], map: "Payment_tenant_invoice_idx")
  @@index([tenantId, memberId], map: "Payment_tenant_member_idx")
  @@index([tenantId, status], map: "Payment_tenant_status_idx")
  @@index([tenantId, channel], map: "Payment_tenant_channel_idx")
  @@index([tenantId, verificationStatus], map: "Payment_tenant_verification_idx")
  @@index([externalReference], map: "Payment_external_ref_idx")
}

model EventRegistration {
  id         String                   @id @default(cuid())
  tenantId   String
  eventId    String
  memberId   String
  invoiceId  String?
  status     EventRegistrationStatus  @default(PENDING)
  checkInCode String?
  checkInAt  DateTime?
  checkedInAt DateTime?
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @updatedAt

  event    Event    @relation(fields: [eventId, tenantId], references: [id, tenantId])
  member   Member   @relation(fields: [memberId, tenantId], references: [id, tenantId])
  invoice  Invoice? @relation(fields: [invoiceId, tenantId], references: [id, tenantId])
  tenant   Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([tenantId, eventId, memberId], map: "Registration_tenant_event_member_key")
  @@index([tenantId, status], map: "Registration_tenant_status_idx")
}

model AuditLog {
  id           String   @id @default(cuid())
  tenantId     String
  actorUserId  String?
  actorMemberId String?
  action       String
  entityType   String?
  entityId     String?
  metadata     Json?
  createdAt    DateTime @default(now())
  invoiceId    String?

  invoice Invoice? @relation(fields: [invoiceId, tenantId], references: [id, tenantId])
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([tenantId, entityType], map: "AuditLog_tenant_entity_idx")
  @@index([tenantId, createdAt], map: "AuditLog_tenant_created_idx")
}

model OrgProfile {
  id        String   @id @default(cuid())
  tenantId  String   @unique
  name      String
  logoUrl   String?
  timezone  String?
  locale    String?
  displayName         String
  legalName           String
  type                String
  currency            String   @default("USD")
  billingContactName  String?
  billingContactEmail String?
  billingContactPhone String?
  billingAddressLine1 String?
  billingAddressLine2 String?
  billingCity         String?
  billingState        String?
  billingPostalCode   String?
  billingCountry      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
}

model FeatureFlags {
  id              String   @id @default(cuid())
  tenantId        String   @unique
  payments        Boolean  @default(true)
  events          Boolean  @default(true)
  communications  Boolean  @default(true)
  reporting       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  tenant Tenant @relation(fields: [tenantId], references: [id])
}

model RoleAssignment {
  id       String   @id @default(cuid())
  tenantId String
  userId   String
  role     String
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id])
  user   User   @relation(fields: [userId, tenantId], references: [id, tenantId])

  @@unique([tenantId, userId, role], map: "RoleAssignment_tenant_user_role_key")
  @@index([tenantId, role], map: "RoleAssignment_tenant_role_idx")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  roles        String[] @default([])
  platformRoles String[] @default([])
  tenantId     String
  memberId     String?  @unique
  status       MemberStatus @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tenant       Tenant   @relation(fields: [tenantId], references: [id])
  member       Member?  @relation(fields: [memberId, tenantId], references: [id, tenantId])
  roleAssignments RoleAssignment[]

  @@unique([tenantId, email], map: "User_email_tenantId_key")
  @@unique([id, tenantId], map: "User_id_tenantId_key") // Required for composite FK
  @@index([tenantId, email], map: "User_tenant_email_idx")
  @@unique([memberId, tenantId], map: "User_member_tenant_unique")
}

model Allocation {
  id          String   @id @default(cuid())
  tenantId    String
  invoiceId   String
  paymentId   String
  amountCents Int
  createdAt   DateTime @default(now())
  createdBy   String?  // User ID who created allocation

  invoice     Invoice  @relation(fields: [invoiceId, tenantId], references: [id, tenantId])
  payment     Payment  @relation(fields: [paymentId, tenantId], references: [id, tenantId])
  tenant      Tenant   @relation(fields: [tenantId], references: [id])

  @@unique([id, tenantId], map: "Allocation_id_tenantId_key") // Required for composite FK
  @@index([tenantId, invoiceId], map: "Allocation_tenant_invoice_idx")
  @@index([tenantId, paymentId], map: "Allocation_tenant_payment_idx")
  @@index([invoiceId, paymentId], map: "Allocation_invoice_payment_idx")
}

model Credit {
  id                String        @id @default(cuid())
  tenantId          String
  memberId          String
  amountCents        Int
  sourcePaymentId   String?       // Payment that created this credit (overpayment)
  status            CreditStatus  @default(AVAILABLE)
  appliedToInvoiceId String?       // v1: Only single invoice, full amount application
  appliedAt         DateTime?
  notes             String?
  createdBy         String?       // User ID
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  sourcePayment     Payment?      @relation(fields: [sourcePaymentId, tenantId], references: [id, tenantId])
  member            Member        @relation(fields: [memberId, tenantId], references: [id, tenantId])
  tenant            Tenant        @relation(fields: [tenantId], references: [id])
  appliedToInvoice  Invoice?      @relation(fields: [appliedToInvoiceId, tenantId], references: [id, tenantId])

  @@unique([id, tenantId], map: "Credit_id_tenantId_key") // Required for composite FK
  @@index([tenantId, memberId], map: "Credit_tenant_member_idx")
  @@index([tenantId, status], map: "Credit_tenant_status_idx")
  @@index([tenantId, appliedToInvoiceId], map: "Credit_tenant_applied_invoice_idx")
}

model PaymentAuditLog {
  id            String              @id @default(cuid())
  tenantId      String
  paymentId     String
  action        PaymentAuditAction
  performedBy   String              // User ID
  timestamp     DateTime            @default(now())
  previousState Json?               // Previous payment state
  newState      Json?               // New payment state
  notes         String?

  payment       Payment             @relation(fields: [paymentId, tenantId], references: [id, tenantId])
  tenant        Tenant              @relation(fields: [tenantId], references: [id])

  @@unique([id, tenantId], map: "PaymentAuditLog_id_tenantId_key") // Required for composite FK
  @@index([tenantId, paymentId], map: "PaymentAuditLog_tenant_payment_idx")
  @@index([tenantId, timestamp], map: "PaymentAuditLog_tenant_timestamp_idx")
}

